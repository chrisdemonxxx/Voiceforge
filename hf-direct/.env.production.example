# VoiceForge API - Production Environment Variables
# Copy this to .env in production and fill in real values

# ============================================================================
# Application
# ============================================================================
NODE_ENV=production
PORT=7860
SESSION_SECRET=your_random_secret_at_least_32_characters_long_change_this

# ============================================================================
# Database (Required - Use Remote PostgreSQL)
# ============================================================================
# Neon Database (Recommended)
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/voiceforge?sslmode=require

# Or Supabase
# DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# Or Railway
# DATABASE_URL=postgresql://postgres:password@xxx.railway.app:5432/railway

# ============================================================================
# Hugging Face (Required for TTS Models)
# ============================================================================
HUGGINGFACE_TOKEN=hf_your_hugging_face_token_here

# ============================================================================
# OpenAI (Optional - For VLLM fallback)
# ============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================================================
# Telephony - Twilio (Optional)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# Telephony - Zadarma (Optional)
# ============================================================================
# REST API Credentials
ZADARMA_API_KEY=your_zadarma_api_key
ZADARMA_API_SECRET=your_zadarma_api_secret

# SIP Credentials
ZADARMA_SIP_USERNAME=535022-100
ZADARMA_SIP_PASSWORD=your_sip_password

# ============================================================================
# GPU Configuration (Auto-configured in Hugging Face Spaces)
# ============================================================================
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
OMP_NUM_THREADS=8

# ============================================================================
# Model Caching (Auto-configured in Docker)
# ============================================================================
HF_HOME=/app/ml-cache
TRANSFORMERS_CACHE=/app/ml-cache
TORCH_HOME=/app/ml-cache

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_TELEPHONY=true
ENABLE_VOICE_CLONING=true
ENABLE_VLLM=true
ENABLE_WEBSOCKET_GATEWAY=true

# ============================================================================
# Rate Limiting (Production Settings)
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
